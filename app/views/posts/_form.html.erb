    <%#= form.date_field :modified_at %>
<!--  </div>-->

  <div class="field my-4">
    <%= form.label :published, class: 'form-label' %>
    <%= form.check_box :published, class: 'form-control-checkbox' %>
  </div>

  <div class="my-4">
    <%= form.submit 'Save Post', class: 'btn btn-primary' %>
  </div>
