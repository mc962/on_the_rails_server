<h1 class="text-center">
  <%= @post.title %>
</h1>

<article class="post-content standard-centered my-4 p-4 rounded overflow-auto">
  <%= @post.content %>
</article>

<section class="publication-data standard-centered d-flex flex-direction-row justify-content-center">
  <div class="date-cell">
    <label for=published_at>Published at: </label>
    <p id="published_at"><%= @post.published_at %></p>
  </div>

  <div class="date-cell">
    <label for=modified_at>Last updated at: </label>
    <p id="modified_at"><%= @post.modified_at %></p>
  </div>
</section>

<% if user_signed_in? && @post.user_id == current_user.id%>
  <section class="p-4 d-flex flex-direction-row justify-content-center">
    <ul class="post-action-links list-group list-group-horizontal">
      <li class="post-action-link list-group-item">
        <%= link_to "Edit this post", edit_post_path(@post), class: 'lh-lg' %>
      </li>
      <li class="post-action-link list-group-item">
        <%= link_to "Back to posts", posts_path, class: 'lh-lg' %>
      </li>
      <li class="post-action-link list-group-item">
        <%= button_to "Destroy this post", @post, method: :delete, class: 'btn btn-link lh-sm' %>
      </li>
    </ul>
  </section>
<% end %>
